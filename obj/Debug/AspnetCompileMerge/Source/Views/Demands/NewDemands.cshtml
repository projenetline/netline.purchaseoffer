@model netline.purchaseoffer.Models.Ntl_Talep

@{
    ViewBag.Title = "Yeni Talep";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("NewDemands", "Demands", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="col-lg-12">
    <button type="submit" name="command" style="margin-right:5px" value="saveDemand" class="btn btn-info  pull-right"><i class="fa fa-save adminpro-informatio" aria-hidden="true"></i> Satın Alma Başlat</button>
    <div class="row" style="margin-top: 0px; margin-left: 5px">
        <div class="col-lg-8 row">

            <label class="control-label col-lg-2" style="margin-top: 10px">Proje No</label>
            <div class="col-lg-2 row">
                @Html.TextBoxFor(model => model.ProjeId, new { @class = "form-control hidden", @type = "text" })
                @Html.TextBoxFor(model => model.ProjeKodu, new { @readonly = "readonly", @class = "form-control ", @type = "text", @style = "font-weight: bold;font-size:12px !Important" })
            </div>
            <label class="control-label col-lg-2" style="margin-top: 10px">Talep Tarihi</label>
            <div class="col-lg-2 row">
                <div class="form-group-inner">
                    <div class="row">
                        <div class="date-picker-inner ">
                            <div class="form-group data-custon-pick" id="data_1">
                                <div class="input-group date col-lg-12">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    @Html.TextBoxFor(model => Model.Date_, "{0:dd.MM.yyyy}", new { @class = "form-control", @style = "font-weight: bold;max-width:150px;font-size:12px !Important" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <br />

    </div>

</div>
    <div class="col-lg-12" style="margin-top:10px">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>

                    <th>Malzeme </th>
                    <th>Oluşturan</th>
                    <th>Talep Miktarı</th>
                    <th>Birim</th>
                    <th>Birim Fiyat</th>
                    <th>Stok Miktarı</th>
                    <th>Kritik Seviye Miktarı</th>
                    <th>Satınalma Miktarı</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Lines.Count; i++)
                {
                <tr>
                    <td>
                        @for (int j = 0; j < @Model.Lines[i].Transrefs.Count; j++)
                        {
                            @Html.TextBoxFor(model => @Model.Lines[i].Transrefs[j], new { @class = "form-control hidden", @type = "text" })

                        }
                        @Html.TextBoxFor(model => Model.Lines[i].UrunAciklamasi, new { @readonly = "readonly", @class = "form-control ", @type = "text", @style = "font-weight: bold;font-size:12px !Important;padding:" })
                    </td>
                    <td>
                        @Html.TextBoxFor(model => Model.Lines[i].AnalizBoyutuAdi, new { @readonly = "readonly", @class = "form-control ", @type = "text", @style = "font-weight: bold;font-size:12px !Important" })
                    </td>
                    <td>
                        @Html.TextBoxFor(model => Model.Lines[i].TalepMiktar, "{0:N2}", new { @readonly = "readonly", @class = "form-control ", @type = "text", @style = "font-weight: bold;font-size:12px !Important;text-align:right" })

                    </td>
                    <td>
                        @Html.TextBoxFor(model => Model.Lines[i].Birim, new { @readonly = "readonly", @class = "form-control ", @type = "text", @style = "font-weight: bold;font-size:12px !Important;padding:" })

                    </td>
                    <td>
                        @Html.TextBoxFor(model => Model.Lines[i].BirimFiyat, "{0:N2}", new { @readonly = "readonly", @class = "form-control ", @type = "text", @style = "font-weight: bold;font-size:12px !Important;text-align:right" })

                    </td>
                    <td>
                        @Html.TextBoxFor(model => Model.Lines[i].StokMiktari, "{0:N2}", new { @readonly = "readonly", @class = "form-control ", @type = "text", @style = "font-weight: bold;font-size:12px !Important;text-align:right" })

                    </td>
                    <td>
                        @Html.TextBoxFor(model => Model.Lines[i].KritikStokSeviyesi, "{0:N2}", new { @readonly = "readonly", @class = "form-control ", @type = "text", @style = "font-weight: bold;font-size:12px !Important;text-align:right" })

                    </td>

                    <td>
                        @Html.TextBoxFor(model => Model.Lines[i].Miktar, "{0:N2}", new { @class = "form-control ", @type = "text", @style = "font-weight: bold;font-size:12px !Important;text-align:right" })
                    </td>
                </tr>


                }

            </tbody>

        </table>
    </div>
}