@model netline.purchaseoffer.Models.Ntl_User

@{
    ViewBag.Title = "Giriş ";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<style>


    .parent {
        margin: auto;
        background-color: white;
        display: flex;
        height: 80%;
        width: 100%;
    }

    .child {
        margin: auto; /* Magic! */
        max-width: 100%;
        max-height: 100%;
    }
</style>
<br />
<br />
<br />

<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"></div>

    <div class="col-md-4 col-md-4 col-sm-4 col-xs-12">

        <div class="text-center m-b-md custom-login">
            <h3>GİRİŞ YAPINIZ</h3>

        </div>
        <div class="hpanel">
            <div style="text-align:center">
                <span style="color:red; text-align:center;"><strong> @ViewBag.msg</strong></span>

            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label class="control-label" for="username">Kullanıcı Adı</label>

                        @Html.TextBoxFor(model => Model.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adı", @Value = Model.UserName, @required = "required" })

                    </div>
                    <div class="form-group">
                        <label class="control-label" for="password">Şifre</label>

                        @Html.TextBoxFor(model => Model.Password, new { @class = "form-control", @type = "password", @placeholder = "**********", @Value = Model.Password, @required = "required" })
                    </div>
                    <div class="form-group">


                        @Html.TextBoxFor(model => Model.ActiveName, new { @class = "form-control", @readonly = "readonly", @Value = Model.ActiveName, @required = "required", @style = "text-align:center" })

                    </div>
                    <button type="submit" class="btn btn-success btn-block loginbtn">Giriş</button>

                }

            </div>
            <div class="parent">



                <img class="child" src="~/Images/logo-dark.png" />


            </div>
        </div>
    </div>
    <div class="col-lg-12" style="height:400px">


        <div class="parent">



            <img class="child" src="~/Content/img/bigtree.png" />

        </div>


    </div>
</div>

