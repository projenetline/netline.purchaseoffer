@model netline.purchaseoffer.Models.Ntl_User

@{
    ViewBag.Title = "Şifre Güncelleme";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>


    .parent {
        margin: auto;
        background-color: white;
        display: flex;
        height: 80%;
        width: 100%;
    }

    .child {
        margin: auto; /* Magic! */
        max-width: 100%;
        max-height: 100%;
    }
</style>
<br />
<br />
<br />

<div class="row">
    @Html.TextBoxFor(model => Model.Id, new { @class = "hidden " })
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"></div>
    <div class="col-md-4 col-md-4 col-sm-4 col-xs-12">
        <div class="text-center m-b-md custom-login">
            <h3>YENİ ŞİFRENİZİ GİRİNİZ</h3>
        </div>
        <div class="hpanel">
            <div style="text-align:center">
                <span style="color:red; text-align:center;"><strong> @ViewBag.msg</strong></span>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="control-label" for="username">Şifre</label>
                        @Html.TextBoxFor(model => Model.Password, new { @class = "form-control", @type = "password", @placeholder = "**********", @Value = Model.Password, @required = "required" })
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="password">Tekrar Şifre</label>

                        @Html.TextBoxFor(model => Model.ConfirmPassword, new { @class = "form-control", @type = "password", @placeholder = "**********", @Value = Model.ConfirmPassword, @required = "required" })
                    </div>
                    <button type="submit" class="btn btn-success btn-block loginbtn">Giriş</button>
                }
            </div>
            <div class="parent">



                <img class="child" src="~/Images/logo-dark.png" />


            </div>
        </div>
    </div>
    <div class="col-lg-12" style="height:400px">
        <div class="parent">
            <img class="child" src="~/Content/img/bigtree.png" />
        </div>
    </div>
</div>